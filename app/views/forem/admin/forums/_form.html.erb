<%= simple_form_for [forem, :admin, @forum] do |f| %>
    <%= f.association :category,:collection => Forem::Category.all, :include_blank => false %>
    <%= f.input :title %>
    <%= f.input :description, :as => :text %>

    <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
    <%= f.association :moderators,:collection => Forem::Membership.all, :as => :check_boxes %>
    <%= f.submit :class => "btn btn-primary" %>
<% end %>
